generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id        Int      @id @default(autoincrement())
  content   String
  postings  Posting[]
  vectors   DocVector[]
}

model Term {
  term      String    @id
  df        Int       @default(0)
  cf        Int       @default(0)
  postings  Posting[]
  vectors   DocVector[]
}

model Posting {
  term      String
  docId     Int
  tf        Int       @default(0)
  positions  Int[]
  document  Document  @relation(fields: [docId], references: [id])
  termRef   Term      @relation(fields: [term], references: [term])
  @@id([term, docId])
}

model DocVector {
  docId     Int
  term      String
  tfidf     Float
  document  Document  @relation(fields: [docId], references: [id])
  termRef   Term      @relation(fields: [term], references: [term])
  @@id([docId, term])
}
